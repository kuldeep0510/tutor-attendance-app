{
  "name": "tutor-whatsapp-server",
  "version": "1.0.0",
  "description": "WhatsApp server for tutor attendance app",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rm -rf dist .wwebjs_auth .wwebjs_cache",
    "fresh-start": "npm run clean && npm run build && npm start"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^24.1.1",
    "whatsapp-web.js": "^1.26.1-alpha.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "@types/rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
